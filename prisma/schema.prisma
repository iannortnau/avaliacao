generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Avaliacao {
  id        Int         @id @default(autoincrement())
  nome      String      @db.VarChar(200)
  descricao String      @db.VarChar(500)
  criador   String      @db.VarChar(500)
  data      DateTime    @db.Date
  Modulo    Modulo[]
  Relatorio Relatorio[]
}

model Media {
  id        Int        @id @default(autoincrement())
  modulo    Int
  relatorio Int
  valor     Float      @db.Float
  Modulo    Modulo     @relation(fields: [modulo], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Media_fk0")
  Relatorio Relatorio  @relation(fields: [relatorio], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Media_fk1")
  Resposta  Resposta[]

  @@index([modulo], map: "Media_fk0")
  @@index([relatorio], map: "Media_fk1")
}

model Modulo {
  id        Int        @id @default(autoincrement())
  avaliacao Int
  titulo    String     @db.VarChar(200)
  resultado Float      @db.Float
  Avaliacao Avaliacao  @relation(fields: [avaliacao], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Modulo_fk0")
  Media     Media[]
  Pergunta  Pergunta[]

  @@index([avaliacao], map: "Modulo_fk0")
}

model Pergunta {
  id        Int        @id @default(autoincrement())
  modulo    Int
  titulo    String     @db.VarChar(200)
  descricao String     @db.VarChar(500)
  Modulo    Modulo     @relation(fields: [modulo], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Pergunta_fk0")
  Resposta  Resposta[]

  @@index([modulo], map: "Pergunta_fk0")
}

model Relatorio {
  id            Int       @id @default(autoincrement())
  avaliacao     Int
  usuario_nome  String    @db.VarChar(200)
  usuario_email String    @db.VarChar(500)
  usuario_pdf   String    @db.VarChar(500)
  Avaliacao     Avaliacao @relation(fields: [avaliacao], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Relatorio_fk0")
  Media         Media[]

  @@index([avaliacao], map: "Relatorio_fk0")
}

model Resposta {
  id       Int      @id @default(autoincrement())
  pergunta Int
  media    Int
  valor    Int
  Media    Media    @relation(fields: [media], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Resposta_fk1")
  Pergunta Pergunta @relation(fields: [pergunta], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Resposta_fk0")

  @@index([pergunta], map: "Resposta_fk0")
  @@index([media], map: "Resposta_fk1")
}
